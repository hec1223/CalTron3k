<Window x:Class="CalTron3k.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalTron3k"
        mc:Ignorable="d"
        Title="CalTron 3000: Event Input" Height="450" Width="800">

    <Grid>
        
        <Label Name="WelcomeDisplay" Content="Welcome to CalTron3000!" Margin="20,20,20,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="22" Height="40"/>
        <ComboBox x:Name="ReasonSelector" HorizontalAlignment="Center" Height="25" Width="150" IsEditable="True">
            <ComboBoxItem Content="Work from Home"/>
            <ComboBoxItem Content="Vacation/PTO"/>
            <ComboBoxItem Content="Sick"/>
            <ComboBoxItem Content="Volunteering"/>
        </ComboBox>
        <TextBlock Name="Instructions" TextWrapping="WrapWithOverflow" Margin="75,75,75,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="16" Height="56" UseLayoutRounding="False"> 
            Please select the type of event from the dropdown menu. Select the date. Optionally, you may add an extra reason for the team. 
        </TextBlock>
               

        <Button x:Name="sendInfoButton" Content="Send To Outlook" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
